<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BorderButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#9d9d9d</item>
        <item name="strokeColor">#9d9d9d</item>
        <item name="strokeWidth">10dp</item>
        <item name="backgroundTint">#606060</item>
    </style>

    <style name="OutlineSpinner" parent="Widget.AppCompat.Spinner">
        <item name="strokeColor">@color/lightGrey</item>
        <item name="strokeWidth">3dp</item>
        <item name="backgroundColor">@color/lightOrange</item>
    </style>

    --- image style ---
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    --- Text input ---
    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@color/transparent</item>
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="android:textColorHint">@color/middleGrey</item>
    </style>

    --- Text styles ---
    <style name="TextViewSubtitle1">
        <item name="android:textSize">12dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <style name="Body1WhiteBold" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body2">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <style name="Body2WhiteBold" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white</item>
    </style>


 --- Button style ---
    <style name="OutlinedButton" >
        <item name="backgroundTint"> @color/transparent</item>
    </style>


    --- Tool bar ----
    <style name="ToolbarTitleText" >
        <item name="android:textColor">@color/lightOrange</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="android:textSize">18dp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ToolBarTabText">
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/lightOrange</item>
    </style>




</resources>